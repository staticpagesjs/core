{
  "private": true,
  "name": "@static-pages/core",
  "version": "7.0.0-beta.5",
  "description": "General purpose static pages renderer.",
  "main": "./index.cjs",
  "module": "./index.mjs",
  "types": "./index.d.mts",
  "exports": {
    ".": {
      "require": "./index.cjs",
      "import": "./index.mjs",
      "types": "./index.d.mts"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=16.0.0",
    "deno": ">=1.0.0"
  },
  "scripts": {
    "clean": "node scripts/clean.mjs",
    "build": "node scripts/build.mjs",
    "watch": "node scripts/watch.mjs",
    "test": "mocha",
    "coverage": "c8 -r text -r text-summary -r lcov --include \"**/*.mjs\" npm test",
    "lint": "eslint src",
    "prepublishOnly": "echo Default 'npm publish' disabled, use 'npm run publish' instead && exit 1",
    "publish": "npm run build && npm run test && cd package && npm publish --dry-run",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "c8": "^9.1.0",
    "chokidar": "^3.6.0",
    "eslint": "^8.57.0",
    "mocha": "^10.4.0",
    "semver": "^7.6.2",
    "typescript": "^5.4.5"
  },
  "author": "László BULIK",
  "license": "MPL-2.0",
  "homepage": "https://staticpagesjs.github.io/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/staticpagesjs/core.git"
  },
  "bugs": {
    "url": "https://github.com/staticpagesjs/core/issues"
  },
  "keywords": [
    "static",
    "pages",
    "generator",
    "renderer",
    "mvc",
    "jamstack",
    "view",
    "template",
    "controller"
  ]
}
