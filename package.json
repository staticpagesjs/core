{
  "name": "@static-pages/core",
  "version": "3.0.2",
  "description": "General purpose static pages renderer.",
  "type": "module",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "browser": "./esm/index.js",
  "exports": {
    ".": {
      "require": "./cjs/index.js",
      "default": "./esm/index.js"
    }
  },
  "scripts": {
    "prepack": "npm run build",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --outDir cjs --module commonjs",
    "watch:esm": "tsc --watch",
    "watch:cjs": "tsc --watch --outDir cjs --module commonjs",
    "test": "eslint src && npm run build && jest",
    "coverage": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "clean": "rimraf esm cjs/*.?s"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/staticpagesjs/core.git"
  },
  "keywords": [
    "static",
    "pages",
    "generator",
    "renderer",
    "mvc",
    "jamstack",
    "view",
    "template",
    "controller"
  ],
  "author": "László BULIK",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/staticpagesjs/core/issues"
  },
  "homepage": "https://staticpagesjs.github.io/",
  "devDependencies": {
    "@types/node": "^14.18.9",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.1.0",
    "jest": "^27.2.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.4"
  }
}
