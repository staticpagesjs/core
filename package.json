{
  "name": "@static-pages/core",
  "version": "1.0.1",
  "description": "General purpose static pages renderer.",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "browser": "lib/esm/index.js",
  "scripts": {
    "prepack": "npm run build",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc --outDir lib/esm",
    "build:cjs": "tsc --outDir lib/cjs --module commonjs --target ES2019",
    "watch:esm": "tsc --watch --outDir lib/esm",
    "watch:cjs": "tsc --watch --outDir lib/cjs --module commonjs --target ES2019",
    "test": "jest",
    "coverage": "jest --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/staticpagesjs/core.git"
  },
  "keywords": [
    "static",
    "pages",
    "generator",
    "renderer",
    "mvc",
    "jamstack",
    "view",
    "template",
    "controller"
  ],
  "author": "László BULIK",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/staticpagesjs/core/issues"
  },
  "homepage": "https://staticpagesjs.github.io/",
  "devDependencies": {
    "@types/node": "^12.20.33",
    "coveralls": "^3.1.1",
    "jest": "^27.2.5",
    "typescript": "^4.4.4"
  }
}
